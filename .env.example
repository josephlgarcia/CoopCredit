# .env.example - Ejemplo de Variables de Entorno para CoopCredit-App
# Copiar a .env y rellenar con valores reales

## ============================================
## SERVER CONFIGURATION
## ============================================
SERVER_PORT=8080
APP_NAME=CoopCredit-App

## ============================================
## DATABASE CONFIGURATION
## ============================================
SPRING_DATABASE=jdbc:postgresql://localhost
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coopcredit_db
DB_USER=postgres
DB_PASSWORD=postgres

## JPA / Hibernate
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQLDialect
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=false

## ============================================
## FLYWAY CONFIGURATION
## ============================================
FLYWAY_ENABLED=true
FLYWAY_BASELINE_ON_MIGRATE=false
FLYWAY_LOCATIONS=classpath:db/migration
FLYWAY_SCHEMAS=public
FLYWAY_VALIDATE_ON_MIGRATE=true

## ============================================
## JWT & SECURITY CONFIGURATION
## ============================================
# ⚠️ IMPORTANTE: Usar un secreto muy seguro en producción
# Generar con: openssl rand -base64 256 | tr -d '\n'
JWT_SECRET=example_jwt_secret_123456789_min_256_bits_for_production
JWT_EXPIRATION=3600000

## ============================================
## RISK SERVICE CONFIGURATION
## ============================================
# URL del servicio de riesgo crediticio (risk-central-mock-service)
RISK_SERVICE_URL=http://localhost:8081

## ============================================
## APPLICATION PROFILES
## ============================================
# dev = desarrollo, prod = producción
SPRING_PROFILES_ACTIVE=dev

## ============================================
## LOGGING CONFIGURATION
## ============================================
LOG_LEVEL=INFO
LOG_APPLICATION_LEVEL=DEBUG

## ============================================
## CORS CONFIGURATION
## ============================================
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000,http://localhost:8080

JAVA_OPTS=-Xmx512m -Xms256m